# Clerk Authentication (Publishable Key - safe for browser)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# Local Development: Use IP + PORT
# These are used when VITE_GRAPHQL_URL and VITE_SOCKET_URL are not set
VITE_GRAPHQL_IP=localhost
VITE_GRAPHQL_PORT=4000
VITE_SOCKET_IP=localhost
VITE_SOCKET_PORT=4000

# Production Deployment: Use full URLs (Vercel)
# Set these in Vercel environment variables (overrides IP+PORT above)
# VITE_GRAPHQL_URL=https://your-backend.railway.app/graphql
# VITE_SOCKET_URL=https://your-backend.railway.app

# API Base URL for REST endpoints (upload, etc.)
# Local dev: http://localhost:4000
# Production: https://your-backend.railway.app
VITE_API_BASE_URL=http://localhost:4000
